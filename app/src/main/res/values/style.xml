<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MaterialAlertIndicationDialogRounded" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/DialogCorners</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">#e6ffffff</item> // Cor padr√£o da linha
        <item name="colorControlActivated">#faffffff</item> // Cor linha e texto quando recebe foco
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColorHint">#808080</item> // Cor texto(hint) sem foco
    </style>

</resources>